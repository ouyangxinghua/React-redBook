.city
  background-color #f1f4f6
  .header-items
    box-sizing border-box
    height 100px
    padding 15px 0 10px 10px
    overflow scroll
    display -webkit-box
    white-space nowrap
    overflow hidden
    text-align justify
    overflow-x initial
    .header-item
      display inline-block
      border-radius 8px
      background-color #fff
      width 75px
      height 75px
      margin-right 8px
      .header-item__flex
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
        img 
          width 30px
          height 30px
        span 
          margin-top 10px 
          font-size 11px
