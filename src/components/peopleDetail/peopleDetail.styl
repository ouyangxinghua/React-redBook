.people-detail
  position relative
  width 100%
  height 100vh
  padding-bottom 200px
  .people-header
    line-height 45px
    box-sizing: border-box
    padding-top 7px
    padding-left:  45px
    position fixed
    top 0
    width 100%
    height 45px
    background-color #fff
    z-index 10
    .people-left
      width 20px
      height 30px
      position absolute
      top 7px
      left 15px
    .people-avatar
      display inline-block
      width 30px
      height 30px 
      border-radius: 50%
      .people-right 
        border-radius: 50%
    span 
      position absolute
      top 0
      margin-left 8px
    .people-nofocus
      color red
      border 1px solid red
    .people-isfocus
      color rgba(0,0,0,0.6)
      border 1px solid rgba(0,0,0,0.6)
    .stylecomment
      margin-top 3px
      margin-right 45px
      float right
      text-align center
      width 33px
      height 22px
      padding-left 10px
      padding-right 10px
      border-radius: 20px
      line-height 22px
      font-size: 11px
    .people-zhuan
      width 30px
      height 28px
      position absolute
      top 8px
      right 6px
      opacity 0.9
  .people-message
    position absolute
    top 445px
    padding: 10px 15px
    .people-title
      font-size: 16px
      word-break: break-all;
    .people-content
      margin-top 20px
      font-size: 14px
      .people-content__item
        margin-top 12px
    .people-content__date
      margin-top 20px
      font-size: 11px
      color: rgba(0,0,0,0.6)
  .bottom-tabbar
    display: flex
    justify-content flex-start
    align-items: center
    z-index 10
    width 100%
    height 35px
    position fixed
    bottom 0
    background-color #fff
    .bottom-tabbar__input
      line-height 25px
      box-sizing: border-box
      padding-left: 15px
      padding-right 15px
      flex-basis: 50%
      width 45%
      background-color #f5f5f5
      height 25px
      margin-left: 10px
      border-radius: 30px
      .bottom-tabbar__icon1
        position relative
        top 3px
        width 15px
        height 15px
    .bottom-tabbar__icons
      font-size: 11px
      display: flex
      justify-content flex-start
      align-items: center
      margin-left 12px
      .bottom-tabbar__icon
        margin-right 4px
        width 25px
        height 25px
  .people-comment
    margin-top 20px
    width 100%
    height 200px
    background-color red
    margin-bottom 200px
    





#swiper4
  position absolute
  top 45px
  #scroll
    width 100%
    height 400px
    img 
      width 100%
      height 100%

.my-bullet-active
  background: red;
  opacity: 0.7;
.swiper-pagination-bullet {
    width: 8px;
    height: 8px;
}
.swiper-container-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet {
    margin: 0 2px;
}


        