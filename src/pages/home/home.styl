.two
    margin-left 30px
    margin-right 30px
.header
  padding-top 28px
  width 100%
  height 60px
  position fixed
  z-index 9999
  background-color #fff
  border-bottom 1px solid rgba(0,0,0,0.1)
  .button
    position absolute
    top 26px
    left 10px
    width 28px
    height 21px
  .tab-item
    font-size 14px
    display flex
    justify-content center
    align-items center
    margin-bottom 14px
    .nav-link
      position relative
      color rgba(0,0,0,0.6)
    .bottom
      position relative
      color rgba(0,0,0,1)
      font-size 15px
      &:before
        content ''
        width 28px
        background-color red
        height 2px
        border-radius 1px
        position absolute
        top 19px
        left 50%
        transform translateX(-50%)
  .search-nav
    border-radius 13px 
    height 25px
    width 90%
    margin auto
    background-color rgba(0,0,0,0.1)
    line-height 25px
    display flex
    justify-content center
    align-items center
    span 
      font-size 13px
      color rgba(0,0,0,0.6)
    .search-icon
      width 15px
      height 15px
      margin-right 5px
.swiper-container
  position absolute
  top 88px
  width 100%
  .swiper-slide
    width 100%
    height 540px
    overflow-y scroll
        

        
      